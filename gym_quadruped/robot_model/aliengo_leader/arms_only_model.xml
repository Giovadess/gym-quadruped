        <light castshadow="false" diffuse="1 1 1"/>
        <motor ctrlrange="-44.4 44.4" ctrllimited="true"/>
        <camera fovy="60"/>
        <joint damping="3" armature="0.01" frictionloss="0.2" />
        
        
    
    </default>
