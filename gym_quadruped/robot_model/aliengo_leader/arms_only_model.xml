<mujoco model="aliengo_description">
    <compiler angle="radian" meshdir="./assets/" autolimits="true"/>
    <option cone="elliptic" impratio="100" />
    <size njmax="500" nconmax="100" />
    <option gravity='0 0 -9.806' timestep='0.002'/>

