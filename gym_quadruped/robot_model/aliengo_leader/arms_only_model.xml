                        <body name="follower/arm_link_1" pos="-0.05 0 0.035 " quat="1 0. 0 0">
                            <inertial pos="0.0194 0.0 -0.125" quat="0 0 0 1" mass="0.05" diaginertia="0.00000457 0.000004831 0.000001409" />
                            <joint name="arm_link_2_joint" pos="0.01 0 0.0" axis="0 1 0" limited="true" range="-1 1" stiffness="300"
