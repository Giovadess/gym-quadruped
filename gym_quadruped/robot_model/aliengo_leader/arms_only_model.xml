                                <joint name="arm_link_3_joint" pos="0. 0 0" axis="0 1 0" limited="false" range="-1 0.2" stiffness="300"
                                damping="92.34" />
                                <geom quat=" 0 0 0 1 " name="apply_force_frame" type="mesh" contype="0" conaffinity="0" group="2" rgba="0.2 0.2 0.2 1" mesh="follower/arm_link_3" />
                                <geom size="0.03 0.03 0.15" pos="0.02 0 -0.15" quat="0 0 1 1" type="box" rgba="0 0 0 0" />

                                <site name="eef_follower" pos="-0.04 0 -0.25" size="0.01" quat="-1 0 0 0"/>
                                <body name="eef" pos="-0.04 0 -0.25" quat="1 0 0 0">

                                    <inertial pos="0 0 0" mass="60" diaginertia="0.00001 0.00001 0.00001"/>
                                    <joint name="eef_joint"  damping="0.1"/>
                                    <geom name="eef_geom" type="sphere" size="0.02" rgba="0 1 0 1" contype="0" conaffinity="0"/>
                                    <site name="eef_contact" pos="0 0 0" size="0.01" rgba="1 0 0 1"/>
                                </body>
                            </body>
                        </body> 
                    </body>
            </body>


